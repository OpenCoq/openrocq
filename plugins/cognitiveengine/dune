(library
 (name cognitiveengine_plugin)
 (public_name rocq-runtime.plugins.cognitiveengine)
 (synopsis "Rocq's cognitive engine plugin")
 (libraries rocq-runtime.vernac rocq-runtime.plugins.ltac))

