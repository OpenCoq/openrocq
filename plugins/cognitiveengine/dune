 (old_public_name coq-core.plugins.cognitiveengine)
 (new_public_name rocq-runtime.plugins.cognitiveengine))

(rule
 (targets g_cognitiveengine.ml)
 (deps (:mlg g_cognitiveengine.mlg))
 (action (chdir %{project_root} (run rocq pp-mlg %{deps}))))
